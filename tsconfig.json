{
  "compilerOptions": {
    "module": "nodenext",
    "target": "ES2017",
    "composite": false,
    "declaration": true,
    "declarationMap": true,
    "forceConsistentCasingInFileNames": true,
    "esModuleInterop": true,
    "moduleResolution": "nodenext",
    "skipLibCheck": true,
    "strict": true,
    "strictNullChecks": true,
    "outDir": "build",
    "sourceMap": true
  },
  "exclude": ["node_modules", "src/legacy-0", "src/legacy-naive"],
  "include": ["src/**/*.ts"]
}
